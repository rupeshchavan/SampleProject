@model PMT.Models.FeedbackForm

@{
    ViewBag.Title = "AboutUs";
    Layout = "~/Views/_LayoutDefault.cshtml";
}

<h2>AboutUs</h2>
<div class="col-sm-4">
    Introduction
</div>
<div class="col-sm">
    Why PropertyInterMediator
</div>
<div class="col-sm-4">
    For Whom
</div>
<h3>Write Us</h3>
@Html.ValidationSummary(true)
<form method="post">
    <div class="col-sm-4">
        <div class="form-group">
            <label for="Name" class="col-form-label">Name </label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
            @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="email" class="col-form-label">Email </label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="mobile" class="col-form-label">Mobile </label>
            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
            @Html.ValidationMessage("Mobile", "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Feedback" class="col-form-label">Feedback </label>
            @Html.TextAreaFor(m => m.Feedback, new { @class = "form-control" })
            @Html.ValidationMessage("Feedback", "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
</form>